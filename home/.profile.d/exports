# Basic term stuff
export TERM=xterm-256color
export DISPLAY=:0.0
export EDITOR="vim"
export LC_CTYPE=en_US.UTF-8
export LESS='-r'
export PAGER=less
export QUIETLOGIN
unset MAILCHECK

# Save all history
export HISTCONTROL=ignoredups
export HISTFILESIZE=
export HISTSIZE=

# Go
export GOPATH=$HOME/c/go
export PATH=$GOPATH/bin:$PATH